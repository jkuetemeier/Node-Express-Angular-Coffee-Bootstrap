html(ng-app="myApp", lang="en")
  mixin head-angular
    //- HTML5 shim, because IE's are horrible.
      //if lt IE 9
        script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
        != js("lib/angular-ui-0.2.0/angular-ui-ieshiv.min")
    //- Include our Stylesheets. See /assets/css.
    //- ==========================================================================
    != css("lib/angular-ui-0.2.0/angular-ui.min")
    != css("lib/ng-grid.min")
    != css("fonts")

  mixin head
    //- nothing (but must be defined)

  include ../includes/html5-head-and-body
    block body
      block content
        p please insert angular content

    //- Include our Scripts.
    //- ============================================================================
    //- Load jQuery
    != js("lib/jquery-1.10.2.min")
    //- Load Bootstrap
    != js("lib/bootstrap.min")
    //- Load Angular
    != js("lib/angular-1.0.7.min")
    != js("lib/angular-ui-0.2.0/angular-ui.min")
    != js("lib/ng-grid-2.0.7.min")
    //- Load Angular Configuration
    != js("app")
    != js("controllers")
    != js("directives")
    != js("filters")
    != js("services")
