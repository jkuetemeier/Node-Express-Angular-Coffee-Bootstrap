head
  //- Lets set up our page a bit.
    ==========================================================================
  title= locals.title
  meta(http-equiv="Content-Type",content="text/html; charset=UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(name="description", content="A simple template with Angular JS running through Express with Connect-Assets and a focus on Coffee Script for scripting, stylus for templating, and Stylus for stylesheets.")
  meta(name="author", content="Joerg Kuetemeier")
  != css("lib/bootstrap.min")
  != css("lib/bootstrap-responsive.min")
  != css("app")
  mixin head-angular
  link(rel="apple-touch-icon-precomposed", sizes="144x144", href="/img/apple-touch-icon-144.png")
  link(rel="apple-touch-icon-precomposed", sizes="114x114", href="/img/apple-touch-icon-114.png")
  link(rel="apple-touch-icon-precomposed", sizes="72x72", href="/img/apple-touch-icon-72.png")
  link(rel="apple-touch-icon-precomposed", href="/img/apple-touch-icon-57-precomposed.png")
  link(rel="shortcut icon", href="/favicon.ico")
  block head
    mixin head

body
  yield